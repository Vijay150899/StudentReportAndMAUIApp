<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductApp.ProductDetailsPage"
             Title="Product Details">

    <ScrollView>
        <StackLayout Padding="20">
            <Image x:Name="ProductImage" HeightRequest="200"/>
            <Label x:Name="ProductTitle" FontSize="24" FontAttributes="Bold" Margin="0,10"/>
            <Label x:Name="ProductPrice" FontSize="20" Margin="0,10"/>
            <Label x:Name="ProductDescription" FontSize="16" Margin="0,10"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
